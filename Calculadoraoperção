operação = 1
while operação != 0:
  print("0.Sair 1.Soma 2.Subtração 3.Multiplicação 4.Divisão")
  operação = int(input("Digite um número conforme a operação que você queira seguir: "))
  if operação == 0:
    print("Operação finalizada")
    break
  elif operação == 1:
   numero1 = float(input("Digite um numero: "))
   numero2 = float(input("Digite outro número: "))
   resultado = numero1 + numero2
   print(resultado)
  elif operação == 2:
   numero1 = float(input("Digite um numero: "))
   numero2 = float(input("Digite outro número: "))
   resultado = numero1 - numero2
   print(resultado)
  elif operação == 3:
   numero1 = float(input("Digite um numero: "))
   numero2 = float(input("Digite outro número: "))
   resultado = numero1*numero2
   print(resultado)
  elif operação == 4:
   numero1 = float(input("Digite um numero: "))
   numero2 = float(input("Digite outro número: "))
   resultado = numero1/numero2
   print(resultado)
  else:
    print("Essa opção não existe")
