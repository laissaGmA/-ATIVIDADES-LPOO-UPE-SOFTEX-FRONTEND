class Computador:
    TotalDeComputadores = 0
    def conta_computadores ():
       Computador.TotalDeComputadores += 1
    def __init__(self, marca, memoria_ram, placa_de_video):
        self.marca = marca
        self.memoria_ram = memoria_ram
        self.placa_de_video = placa_de_video
        ação = "ligado"
computador1 = Computador('Asus','8gb','Nvidia')
computador2 = Computador('Dell', '16gb','Nvidia')
computador3 = Computador('Acer', '8gb', 'Nvidia')
Computador . conta_computadores ()
Computador . conta_computadores ()
Computador . conta_computadores ()
print(computador1.marca,computador1.memoria_ram,computador1.placa_de_video)
